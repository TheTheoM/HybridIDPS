# alert icmp any any -> $HOME_NET any (msg:"ICMP Ping"; sid:1000001;)

alert tcp any any -> $HOME_NET 1:1024 (msg:"Port Scanning Detected"; detection_filter: track by_src, count 10, seconds 60; sid:10000002; rev:1;)

alert tcp any any -> $HOME_NET $HTTP_PORTS (msg:"Possible SYN Flood Attack Detected"; flags:S; detection_filter: track by_dst, count 50, seconds 30; sid:10000003; rev:1;)

alert udp any any -> $HOME_NET 53 (msg:"Possible UDP Flood Attack Detected"; detection_filter: track by_dst, count 50, seconds 30; sid:10000004; rev:1;)

alert icmp any any -> $HOME_NET any (msg:"Possible ICMP Flood Attack Detected"; detection_filter: track by_dst, count 50, seconds 30; sid:1000005; rev:1;)

alert tcp any any -> $HOME_NET 22 (msg:"Possible SSH Brute Force Attack Detected"; flags: S; detection_filter: track by_src, count 5, seconds 60; metadata:service ssh; sid:10000006; rev:1;)